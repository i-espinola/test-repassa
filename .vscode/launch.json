{
    // Use o IntelliSense para aprender sobre possíveis atributos.
    // Passe o mouse para ver as descrições dos atributos existentes.
    // Para obter mais informações, visite: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "attach",
        "name": "Attach to Node",
        "protocol": "inspector",
        "port": 3030,
        "restart": true,
        "sourceMaps": true,
        "smartStep": true,
        "address": "localhost",
        "localRoot": "${workspaceFolder}/src",
        "timeout": 50000,
        "showAsyncStacks": true,
        "sourceMapPathOverrides": {
            "/usr/src/app/src/*": "${workspaceFolder}/src/*"
        },
        "skipFiles": [
            "/usr/src/app/node_modules/**/*.js",
            "<node_internals>/**/*.js"
        ]
    }
    ]
}
