{
	"name": "test-repassa-api",
	"version": "1.0.0",
	"description": "Desafio front-end Repassa",
	"private": false,
	"main": "build/index.js",
	"author": "Ivan Espinola Gomes <ivan.espinola@live.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/i-espinola/test-repassa-api.git"
	},
	"bugs": {
		"url": "https://github.com/i-espinola/test-repassa-api/issues"
	},
	"readme": "https://github.com/i-espinola/test-repassa-api#readme",
	"license": "MIT",
	"scripts": {
		"clean": "del build npm-debug.log package-lock.json",
		"build": "npm run clean && copyfiles -f src/*.ico build && babel ./src -d ./build/ --source-maps",
		"watch": "npm run build &&  babel ./src -d ./build/ --source-maps --watch",
		"dev": "npm run build &&  babel ./src -d ./build/ --source-maps --watch | nodemon --watch build",
		"start": "npm run build && pm2 start build/index.js --name repassa-api"
	},
	"dependencies": {
		"babel": "*",
		"babel-cli": "*",
		"babel-preset-env": "*",
		"babel-preset-es2015": "*",
		"babel-preset-react": "*",
		"babel-preset-stage-0": "*",
		"body-parser": "*",
		"copyfiles": "*",
		"del-cli": "*",
		"express": "*",
		"express-query-int": "*",
		"lodash": "*",
		"mongoose": "*",
		"mongoose-paginate": "*",
		"node-restful": "*",
		"pm2": "*",
		"serve-favicon": "*"
	},
	"devDependencies": {
		"eslint": "*",
		"eslint-config-standard": "*",
		"eslint-plugin-import": "*",
		"eslint-plugin-node": "*",
		"eslint-plugin-promise": "*",
		"eslint-plugin-standard": "*",
		"nodemon": "*"
	}
}
