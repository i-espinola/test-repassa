{
	"name": "test-repassa-api",
	"version": "1.0.0",
	"description": "Desafio front-end Repassa",
	"private": false,
	"main": "build/index.js",
	"author": "Ivan Espinola Gomes <ivan.espinola@live.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/i-espinola/test-repassa-api.git"
	},
	"bugs": {
		"url": "https://github.com/i-espinola/test-repassa-api/issues"
	},
	"readme": "https://github.com/i-espinola/test-repassa-api#readme",
	"homepage": ".",
	"license": "MIT",
	"scripts": {
		"clean": "del build npm-debug.log package-lock.json",
		"env": "node -r dotenv/config",
		"build": "npm run clean && babel ./src -d ./build/ --source-maps",
		"dev": "npm run build && babel ./src -d ./build/ --source-maps --watch | nodemon -r dotenv/config --watch build",
		"debugger": "npm run build && babel ./src -d ./build/ --source-maps --watch | nodemon -r dotenv/config --inspect --watch build",
		"start": "npm run build && node -r dotenv/config build/index"
	},
	"dependencies": {
		"babel": "^6.23.0",
		"babel-cli": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"babel-runtime": "^6.26.0",
		"body-parser": "^1.19.0",
		"del-cli": "^3.0.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"mongodb": "^3.4.0",
		"mongoose": "^5.7.14"
	},
	"devDependencies": {
		"eslint": "^6.7.2",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"nodemon": "^2.0.1"
	}
}
